{
  "name": "touch_portal_star_citizen_tools",
  "version": "3.5.1",
  "description": "Touch Portal plugin to read Star Citizen's Game.log and evaluate events",
  "main": "dist/index.ts",
  "bin": "dist/index.js",
  "scripts": {
    "dev": "tsx --inspect src/index.ts",
    "dev:watch": "tsx watch --inspect src/index.ts",
    "start": "node dist/index.js",
    "compile": "tsc",
    "build": "npm run compile && node scripts/build.js"
  },
  "keywords": [
    "TouchPortal",
    "TouchPortalPlugins",
    "Star Citizen"
  ],
  "author": "Miwshera",
  "license": "MIT",
  "dependencies": {
    "node-wmi": "^0.0.5",
    "out-url": "^1.2.2",
    "touchportal-api": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "adm-zip": "^0.5.16",
    "pkg": "^5.8.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "assets": [
      "node_modules/full-icu/**"
    ]
  },
  "engines": { "node": ">=18" }
}
